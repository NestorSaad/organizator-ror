%h1.block.text-xl.text-purple-500= t('.title')

%table
  %thead
    %tr
      %th= t('.table.name')
      %th= t('.table.description')
      %th= t('.table.due_date')
      %th= t('.table.category')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.due_date
        %td= task.category.name
        %td= link_to t('common.show'), task
        %td= link_to t('common.edit'), edit_task_path(task)
        %td= link_to t('common.destroy'), task, :data => { turbo_method: :delete, :confirm => t('common.are_you_sure') }

%br

= link_to t('.botton.new'), new_task_path
